<link href="/css/styles.css" rel="stylesheet">
<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Transaction #<%= saleDetails[0].sale_id %></h1>
            <a href="/transactions" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                Back to Transactions
            </a>
        </div>

        <div class="bg-white shadow-md rounded-lg p-6">
            <div class="mb-6">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-gray-600">Date:</p>
                        <p class="font-semibold"><%= formatDate(saleDetails[0].created_at) %></p>
                    </div>
                    <div>
                        <p class="text-gray-600">Payment Method:</p>
                        <p class="font-semibold"><%= saleDetails[0].payment_method.toUpperCase() %></p>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-4">
                <h2 class="text-lg font-semibold mb-4">Items</h2>
                <table class="min-w-full divide-y divide-gray-200">
                    <thead>
                        <tr>
                            <th class="text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                            <th class="text-left text-xs font-medium text-gray-500 uppercase">Quantity</th>
                            <th class="text-left text-xs font-medium text-gray-500 uppercase">Unit Price</th>
                            <th class="text-left text-xs font-medium text-gray-500 uppercase">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% saleDetails.forEach(item => { %>
                            <tr>
                                <td class="py-3"><%= item.product_name %></td>
                                <td class="py-3"><%= item.quantity %></td>
                                <td class="py-3">Ksh. <%= Number(item.unit_price).toFixed(2) %></td>
                                <td class="py-3">Ksh. <%= Number(item.subtotal).toFixed(2) %></td>

                            </tr>
                        <% }); %>
                    </tbody>
                    <tfoot>
                        <tr class="border-t-2">
                            <td colspan="3" class="py-3 text-right font-semibold">Total:</td>
                            <td class="py-3 font-semibold">
                                Ksh. <%= saleDetails[0] && saleDetails[0].total_amount ? Number(saleDetails[0].total_amount).toFixed(2) : '0.00' %>
                            </td>
                            
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
